<h1>Add a Puppy for Adoption</h1>

<%= form_with url: "/puppy", method: :post, local: true do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :breed %>
    <%= form.text_field :breed %>
  </div>

  <div>
    <%= form.label :age %>
    <%= form.text_field :age %>
  </div>

  <%= form.submit "submit" %>
<% end %>
